
@import 'nib'

// colors

light = #a9a9a9
lighter = #eee
blue = #00ABFA
dark = #222

// mixins

smooth()
  -webkit-font-smoothing: antialiased

transition()
  -webkit-transition: arguments

hide-text()
  display: block
  text-indent: -9999999px
  outline: none

replace(url, width, height = width)
  hide-text()
  background: url
  width: width
  height: height

button()
  bold-button(glow: blue)

// general

body
  padding: 5px 40px
  font: 14px 'helvetica neue', helvetica, arial, sans-serif
  smooth()

a
  color: #00B7FF
  text-decoration: none
  &:hover
    text-decoration: underline

// forms

input[type='text']
  margin: 5px 0
  padding: 8px 10px
  outline: none
  border-radius: 5px
  border: 1px solid lighter
  color: light
  &:focus
    box-shadow: 0 1px 1px 0 rgba(blue, 0.6), 0 0 3px 1px rgba(blue, 0.3)

button,
input[type='button'],
input[type='submit']
  button()

// menu

ul#menu
  fixed: top 15px right 15px
  margin: 0
  padding: 0
  li
    list-style: none
    opacity: .5
    &:hover
      opacity: 1
    &.charts a
      replace: url(/images/icons/pie-chart.png) 24px

// notifications

ul#notifications
  fixed: top 10px left 15px
  z-index: 200
  margin: 0
  padding: 0
  li
    list-style: none
    margin: 8px 0
    padding: 8px 15px
    border: 1px solid light
    border-radius: 5px
    font-size: 12px
    background: white
    box-shadow: 0 0 4px lighter

// dialogs

.dialog
  position: fixed
  padding: 5px 10px
  background: white
  border-radius: 5px
  box-shadow 0 0 50px 0 rgba(black, 0.4)
  z-index: 1000
  text-align: left
  .message
    padding: 20px
  &#confirmation
    width: 200px
  .actions
    button
      margin: 1px
      float: right
    

// overlay

#overlay
  absolute: top 0 left 0
  width: 100%
  height: 100%
  background: rgba(black, 0.8)
  z-index: 500
  transition: opacity 0.3s
  opacity: 1
  visibility: visible
  &.hide
    opacity: 0
    visibility: hidden

// items table

table#items
  width: 100%
  margin-top: 50px
  border-collapse: collapse
  thead
    tr th
      padding: 10px 10px 10px 0
      text-align: right
      user-select: none
      cursor: pointer
      &.asc::before
        content: '▲ '
        color: light
      &.desc::before
        content: '▼ '
        color: light

table#items
  tbody
    tr
      border-bottom: 1px solid #eee
      &:last-child
        border-bottom: none
      td
        border-right: 1px solid #eee
        padding 4px 15px
        text-align: right
        &:last-child
          border-right: none
        &.entity
          text-align: left
          input
            width: 90px
        &.amount
          color: light
          width: 80px
          input
            width: 60px
            text-align: right
        &.category
        &.date
        &.tags
          width: 100px
          input
            width: 80px
        &.delete
          width: 70px
          a
            button()

table#items
  tr.edit-item td
    text-align: right
    input[type='text']
      width: 80%

// charts

.dialog .chart
  padding 15px

// month indicators

#prev-month
#next-month
#current-month
  position: fixed
  display: inline-block
  padding: 15px
  border: 1px solid lighter
  color: inherit
  opacity: .2
  transition: opacity .3s
  &:hover
    text-decoration: none
    opacity: 1
  &:active
    background: lighter + 5%

#prev-month
  fixed: bottom left
  border-radius: top right 25px
#next-month
  fixed: bottom right
  border-radius: top left 25px
#current-month
  fixed: bottom 0 left 46%
  border-radius: top 25px
